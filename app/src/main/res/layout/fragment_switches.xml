<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:switch="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLock"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.app.material.widget.Switch
        android:id="@+id/m_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginTop="50dp"
        android:layout_marginStart="100dp"
        switch:supportRTL="false"
        switch:animDuration="220"
        switch:thumbColorNormal="#F1F1F1"
        switch:trackColorNormal="#B0AFAF"
        switch:thumbColorActivated="@color/colorPrimary"
        switch:trackColorActivated="@color/md_blue_200"/>

</FrameLayout>