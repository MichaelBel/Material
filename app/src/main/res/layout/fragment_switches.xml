<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:switch="http://schemas.android.com/apk/res-auto"
    xmlns:check="http://schemas.android.com/apk/res-auto"
    xmlns:radio="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLock"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.app.material.widget.Switch
        android:id="@+id/m_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        switch:supportRTL="false"
        switch:animDuration="220"
        switch:thumbColorNormal="#F1F1F1"
        switch:trackColorNormal="#B0AFAF"
        switch:thumbColorActivated="#009688"
        switch:trackColorActivated="#77C2BB"
        />

    <org.app.material.widget.CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginTop="80dp"
        android:layout_marginStart="40dp"
        />

    <org.app.material.widget.RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginTop="120dp"
        android:layout_marginStart="40dp"
        />

</FrameLayout>