<resources>

    <!--Switch-->
    <declare-styleable name="Switch">
        <attr name="supportRTL" format="boolean"/>
        <attr name="animDuration" format="integer"/>
        <attr name="thumbColorNormal" format="color"/>
        <attr name="thumbColorActivated" format="color"/>
        <attr name="trackColorNormal" format="color"/>
        <attr name="trackColorActivated" format="color"/>
    </declare-styleable>



    <!--ColorPickerView-->
    <declare-styleable name="ColorPickerView">
        <attr name="alphaSlider" format="boolean"/>
        <attr name="lightnessSlider" format="boolean"/>
        <attr name="density" format="integer"/>
        <attr name="initialColor" format="integer"/>
        <attr name="wheelType" format="enum">
            <enum name="FLOWER" value="0"/>
            <enum name="CIRCLE" value="1"/>
        </attr>
        <attr name="pickerTitle" format="reference|string"/>
        <attr name="pickerButtonOk" format="reference|string"/>
        <attr name="pickerButtonCancel" format="reference|string"/>
    </declare-styleable>

    <!--ColorPickerShift-->
    <declare-styleable name="ColorPickerShift">
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
        <attr name="colors" format="reference"/>
        <attr name="selectedColorIndex" format="integer"/>
    </declare-styleable>

    <declare-styleable name="LobsterPicker">
        <attr name="color_wheel_thickness" format="dimension" />
        <attr name="color_wheel_radius" format="dimension" />
        <attr name="color_wheel_pointer_radius" format="dimension" />
        <attr name="color_wheel_pointer_shadow_radius" format="dimension"/>
        <attr name="color_wheel_pointer_shadow" format="color"/>
        <attr name="color_wheel_scheme" format="reference" />
        <attr name="color_history_enabled" format="boolean"/>
        <attr name="color_history_radius" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="LobsterSlider">
        <attr name="color_slider_thickness" format="dimension" />
        <attr name="color_slider_length" format="dimension" />
        <attr name="color_slider_pointer_radius" format="dimension" />
        <attr name="color_slider_pointer_shadow_radius" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="LobsterShadeSlider">
        <attr name="color_slider_scheme" format="reference"/>
    </declare-styleable>
</resources>