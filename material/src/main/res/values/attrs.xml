<resources>
    <!--Switch-->
    <declare-styleable name="Switch">
        <attr name="switch_thumbOn" format="color"/>
        <attr name="switch_trackOn" format="color"/>
        <attr name="switch_darkTheme" format="boolean"/>
        <attr name="switch_supportRTL" format="boolean"/>
    </declare-styleable>

    <!--CheckBox-->
    <declare-styleable name="CheckBox">
        <attr name="checkBox_darkTheme" format="boolean"/>
        <attr name="checkBox_accentColor" format="color"/>
    </declare-styleable>

    <!--RadioButton-->
    <declare-styleable name="RadioButton">
        <attr name="radioButton_darkTheme" format="boolean"/>
        <attr name="radioButton_accentColor" format="color"/>
    </declare-styleable>

    <!--IndicatorView-->
    <declare-styleable name="IndicatorView">
        <attr name="indicator_width" format="dimension"/>
        <attr name="indicator_height" format="dimension"/>
        <attr name="indicator_margin" format="dimension"/>
        <attr name="indicator_animator" format="reference"/>
        <attr name="indicator_animatorReverse" format="reference"/>
        <attr name="indicator_drawable" format="reference"/>
        <attr name="indicator_drawableUnselected" format="reference"/>
        <attr name="indicator_orientation" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
        <attr name="indicator_gravity">
            <flag name="top" value="0x30"/>
            <flag name="bottom" value="0x50"/>
            <flag name="left" value="0x03"/>
            <flag name="right" value="0x05"/>
            <flag name="center_vertical" value="0x10"/>
            <flag name="fill_vertical" value="0x70"/>
            <flag name="center_horizontal" value="0x01"/>
            <flag name="fill_horizontal" value="0x07"/>
            <flag name="center" value="0x11"/>
            <flag name="fill" value="0x77"/>
            <flag name="clip_vertical" value="0x80"/>
            <flag name="clip_horizontal" value="0x08"/>
            <flag name="start" value="0x00800003"/>
            <flag name="end" value="0x00800005"/>
        </attr>
    </declare-styleable>

    <!--ColorPickerView-->
    <declare-styleable name="ColorPickerView">
        <attr name="alphaSlider" format="boolean"/>
        <attr name="lightnessSlider" format="boolean"/>
        <attr name="density" format="integer"/>
        <attr name="initialColor" format="integer"/>
        <attr name="wheelType" format="enum">
            <enum name="FLOWER" value="0"/>
            <enum name="CIRCLE" value="1"/>
        </attr>
        <attr name="pickerTitle" format="reference|string"/>
        <attr name="pickerButtonOk" format="reference|string"/>
        <attr name="pickerButtonCancel" format="reference|string"/>
    </declare-styleable>

    <!--ActionBar-->
    <declare-styleable name="ActionBar">
        <attr name="titleTextColor" format="color"/>
        <attr name="backIcon" format="reference"/>
    </declare-styleable>
</resources>